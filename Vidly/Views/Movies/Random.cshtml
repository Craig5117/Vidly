@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Dynamically add attributes like the following example. This is similar to React*@
@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Name</h2>

@*razor views allows you to dynamically embed c# into html
    React is still more performant though*@

@if (Model.Customers.Count == 0)
    {
        <text>No one has rented this movie before.</text>
    }
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


